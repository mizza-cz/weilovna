<section class="registration-section pt-4">
  <div class="container">
    <h1 class="title mb-3">PŘIHLÁŠENÍ</h1>

    <div class="alert alert-success">
      <a href="#" class="close" data-dismiss="alert" aria-label="close"
        >&times;</a
      >
      <strong>Successfully submitted!</strong> The form is valid.
    </div>
    <form action="#" class="formLogin form">
      <div class="row gx-5 gy-lg-4 gy-3">
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="emailLogin" class="form-label">
              E-mailová adresa
            </label>
            <input
              id="emailLogin"
              name="email"
              type="email"
              placeholder="E-mailová adresa"
            />
          </div>
        </div>
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="passLogin" class="form-label"> Heslo </label>
            <input
              id="passLogin"
              name="password"
              class="password-field"
              type="password"
              placeholder="Heslo"
            />
            <span toggle=".password-field" class="toggle-password">
              {% include "@images/eye.svg" %}
            </span>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-btn">
            <button class="btn">Přihlásit se</button>
            <a class="form-btn__resset" href="#">Nepamatuji si heslo</a>
          </div>
        </div>
      </div>
    </form>
    <h2 class="title">NOVÁ REGISTRACE</h2>
    <form class="formRegistration form">
      <div class="row gx-lg-5 gx-4 gy-lg-4 gy-3">
        <div class="col-lg-2 col-sm-4">
          <div class="form__box">
            <label for="titul" class="form-label"> Titul </label>
            <input id="titul" name="titul" type="text" placeholder="Titul" />
          </div>
        </div>
        <div class="col-lg-5 col-sm-8">
          <div class="form__box">
            <label for="surname" class="form-label"> Příjmení </label>
            <input
              id="surname"
              name="surname"
              type="text"
              placeholder="Příjmení"
            />
          </div>
        </div>
        <div class="col-lg-5 col-sm-6">
          <div class="form__box">
            <label for="name" class="form-label"> Jméno </label>
            <input id="name" name="name" type="text" placeholder="Jméno " />
          </div>
        </div>

        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="street" class="form-label"> Ulice </label>
            <input name="street" id="street" type="text" placeholder="Ulice" />
          </div>
        </div>
        <div class="col-lg-2 col-sm-6">
          <div class="form__box">
            <label for="refNumber" class="form-label"> Číslo popisné </label>
            <input
              name="refNumber"
              id="refNumber"
              type="text"
              placeholder="Číslo popisné"
            />
          </div>
        </div>
        <div class="col-lg-2 col-sm-6">
          <div class="form__box">
            <label for="psc" class="form-label"> PSČ </label>
            <input id="psc" name="psc" type="text" placeholder="PSČ" />
          </div>
        </div>
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="city" class="form-label"> Město </label>
            <input name="city" id="city" type="text" placeholder="Město" />
          </div>
        </div>

        <div class="col-lg-2 col-sm-6">
          <div class="form__box">
            <label for="state" class="form-label"> Země </label>
            <input id="state" name="state" type="text" placeholder="Země" />
          </div>
        </div>
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="telNumber" class="form-label"> Telefonní číslo </label>
            <input
              id="telNumber"
              name="telNumber"
              type="tel"
              placeholder="+420  "
            />
          </div>
        </div>
        <div class="col-lg-6 col-sm-6">
          <div class="form__box">
            <label for="emailPerson" class="form-label">
              E-mailová adresa
            </label>
            <input
              id="emailPerson"
              name="emailPerson"
              type="email"
              placeholder="E-mailová adresa"
            />
          </div>
        </div>
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="passPerson" class="form-label"> Heslo </label>
            <input
              name="passPerson"
              id="passPerson"
              class="password-field"
              type="password"
              placeholder="Heslo"
            />
            <span toggle=".password-field" class="toggle-password">
              {% include "@images/eye.svg" %}
            </span>
          </div>
        </div>
        <div class="col-lg-4 col-sm-6">
          <div class="form__box">
            <label for="passPerson-2" class="form-label"> Heslo znovu </label>
            <input
              class="password-field"
              type="password"
              placeholder="Heslo znovu"
              name="passPersonn"
              id="passPersonn"
            />
            <span toggle=".password-field" class="toggle-password">
              {% include "@images/eye.svg" %}
            </span>
          </div>
        </div>
      </div>

      <div class="form-check">
        <input type="checkbox" id="companyCheckbox" />
        <label for="companyCheckbox">
          <span> Nakupuji na firmu</span>
        </label>
      </div>
      <div class="company-fields" style="display: none">
        <div class="row gx-5 gy-4">
          <div class="col-lg-6">
            <div class="form__box">
              <label for="nameComp" class="form-label">
                Název společnosti
              </label>
              <input
                id="nameComp"
                name="nameComp"
                type="text"
                placeholder="Název společnosti"
              />
            </div>
          </div>
          <div class="col-lg-3 col-sm-6">
            <div class="form__box">
              <label for="ico" class="form-label"> IČO </label>
              <input name="ico" id="ico" type="text" placeholder="IČO" />
            </div>
          </div>
          <div class="col-lg-3 col-sm-6">
            <div class="form__box">
              <label for="dic" class="form-label"> DIČ </label>
              <input id="dic" name="dic" type="text" placeholder="DIČ" />
            </div>
          </div>

          <div class="col-lg-4 col-sm-6">
            <div class="form__box">
              <label for="streetComp" class="form-label"> Ulice </label>
              <input
                name="streetComp"
                id="streetComp"
                type="text"
                placeholder="Ulice"
              />
            </div>
          </div>
          <div class="col-lg-2 col-sm-6">
            <div class="form__box">
              <label for="refNumComp" class="form-label"> Číslo popisné </label>
              <input
                name="refNumComp"
                id="refNumComp"
                type="text"
                placeholder="Číslo popisné"
              />
            </div>
          </div>
          <div class="col-lg-2 col-sm-6">
            <div class="form__box">
              <label for="pscComp" class="form-label"> PSČ </label>
              <input
                name="pscComp"
                id="pscComp"
                type="text"
                placeholder="PSČ"
              />
            </div>
          </div>
          <div class="col-lg-4 col-sm-6">
            <div class="form__box">
              <label for="cityComp" class="form-label"> Město </label>
              <input
                name="cityComp"
                id="cityComp"
                type="text"
                placeholder="Město"
              />
            </div>
          </div>
        </div>
      </div>

      <button class="btn">Registrace</button>
    </form>
  </div>
</section>
