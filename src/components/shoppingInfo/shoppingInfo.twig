<section class="shoppingInfo">
  <form action="">
    <div class="container">
      <div class="row gy-4">
        <div class="col-lg-8">
          <h1 class="title mb-3">Fakturační adresa</h1>
          <div class="row gy-lg-3 gy-2 gx-lg-5 gx-3">
            <div class="col-lg-7">
              <label class="o-select">
                <select class="js-select">
                  <option value="">Vyberte z uložených adres</option>
                  <option>Na Viničkách 508</option>
                  <option>Na Viničkách 508</option>
                  <option>Na Viničkách 508</option>
                  <option>Na Viničkách 508</option>
                </select>
              </label>
            </div>
            <div class="col-lg-7 col-sm-6">
              <div class="form__box">
                <label for="name" class="form-label"> Jméno </label>
                <input id="name" name="name" type="text" placeholder="Jméno " />
              </div>
            </div>
            <div class="col-lg-7 col-sm-6">
              <div class="form__box">
                <label for="surname" class="form-label"> Příjmení </label>
                <input
                  id="surname"
                  name="surname"
                  type="text"
                  placeholder="Příjmení"
                />
              </div>
            </div>
            <div class="col-lg-7 col-sm-8">
              <div class="form__box">
                <label for="street" class="form-label"> Ulice </label>
                <input
                  name="street"
                  id="street"
                  type="text"
                  placeholder="Ulice"
                />
              </div>
            </div>
            <div class="col-lg-3 col-sm-4 col-6">
              <div class="form__box">
                <label for="refNumber" class="form-label">
                  Číslo popisné
                </label>
                <input
                  name="refNumber"
                  id="refNumber"
                  type="text"
                  placeholder="Číslo popisné"
                />
              </div>
            </div>
            <div class="col-lg-7 col-sm-8">
              <div class="form__box">
                <label for="city" class="form-label"> Město </label>
                <input name="city" id="city" type="text" placeholder="Město" />
              </div>
            </div>
            <div class="col-lg-3 col-sm-4 col-6">
              <div class="form__box">
                <label for="psc" class="form-label"> PSČ </label>
                <input id="psc" name="psc" type="text" placeholder="PSČ" />
              </div>
            </div>
            <div class="col-lg-7">
              <label class="o-select">
                <select class="js-select">
                  <option value="">Vyberte z uložených e-mailů</option>
                  <option>emailemail@seznam.cz</option>
                  <option>emailemail@seznam.cz</option>
                  <option>emailemailemailemail@seznam.cz</option>
                  <option>emailemail@seznam.cz</option>
                </select>
              </label>
            </div>
            <div class="col-lg-6">
              <div class="form__box">
                <label for="emailPerson" class="form-label">
                  E-mailová adresa
                </label>
                <input
                  id="emailPerson"
                  name="emailPerson"
                  type="email"
                  placeholder="E-mailová adresa"
                />
              </div>
            </div>
            <div class="col-lg-7">
              <label class="o-select">
                <select class="js-select">
                  <option value="">
                    Vyberte z uložených telefonních čísel
                  </option>
                  <option>+420666777788</option>
                  <option>+420666777788</option>
                </select>
              </label>
            </div>
            <div class="col-lg-6">
              <div class="form__box">
                <label for="telNumber" class="form-label">
                  Telefonní číslo
                </label>
                <input
                  id="telNumber"
                  name="telNumber"
                  type="tel"
                  placeholder="+420  "
                />
              </div>
            </div>
            <div class="col-lg-10">
              <div class="form__box">
                <label for="shoppingInfoTextarea" class="form-label">
                  Poznámka
                </label>
                <textarea name="shoppingInfoTextarea" id="shoppingInfoTextarea">
                </textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="shoppingInfo__board formRadio">
            <h2 class="title">
              {% include "@images/car.svg" %} Vyberte si způsob dopravy
            </h2>
            <label class="shoppingInfo__check">
              <input type="radio" name="doprava" />
              Vyzvednutí u veterináře
            </label>
            <p class="shoppingInfo__board-text mt-3">
              {% include "@images/alert-black.svg" %}
              <i>
                Zboží bude odesláno až po zaplacení objednávky.
                <br />
                <strong> Adresa: </strong> Veterinární klinika Na Weilovně
                Nádražní 131, 26101 Příbram
              </i>
            </p>
            <label class="shoppingInfo__check">
              <input type="radio" name="doprava" />
              Doprava domu PPL
              <img src="images/content/ppl.png" loading="lazy" alt="ppl" />
            </label>
            <label class="shoppingInfo__check">
              <input type="radio" name="doprava" />
              Doprava domu Zásilkovna
              <img
                src="images/content/zasilkovna.png"
                loading="lazy"
                alt="ppl"
              />
            </label>
            <label class="shoppingInfo__check">
              <input type="radio" name="doprava" />
              Zásilkovna Z-BOX
              <img
                src="images/content/zasilkovna.png"
                loading="lazy"
                alt="ppl"
              />
            </label>
            <p class="mt-4">
              Při objednávce nad <strong>1000 Kč s DPH</strong> je
              <strong>doprava ZDARMA.</strong>
            </p>
            <p class="p2 fw-bold mt-4 mb-1">PPL 99 Kč vč. DPH</p>
            <p>
              <i>
                Přepravovaná zásilka, která váží více jak 30 kg (počítáno včetně
                veškerého obalového a výplňového materiálu) bude rozdělena na
                více zásilek tak, že za každých dalších započatých 30 kg váhy
                bude účtováno dalších 99 Kč s DPH.
              </i>
            </p>
            <p class="p2 fw-bold mt-4">Zásilkovna výdejní místo 79 Kč,</p>
            <p class="p2 fw-bold">Zásilkovna domů 109 Kč</p>
            <div class="shoppingInfo__board-pay">
              <h2 class="title">
                {% include "@images/selectpay.svg" %} Vyberte si způsob platby
              </h2>
              <label class="shoppingInfo__check">
                <input type="radio" name="pay" />
                GoPay
                <img src="images/content/gopay.png" loading="lazy" alt="ppl" />
              </label>
              <label class="shoppingInfo__check">
                <input type="radio" name="pay" />
                Na dobírku přepravní společnosti 49,-Kč
              </label>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="shoppingInfo__boxes formRadio">
            <div class="form-check">
              <input type="checkbox" id="companyCheckbox" />
              <label for="companyCheckbox">
                <span> Nakupuji na firmu</span>
              </label>
            </div>
            <div class="company-fields" style="display: none">
              <div class="row gx-5 gy-4">
                <div class="col-lg-6">
                  <div class="form__box">
                    <label for="nameComp" class="form-label">
                      Název společnosti
                    </label>
                    <input
                      id="nameComp"
                      name="nameComp"
                      type="text"
                      placeholder="Název společnosti"
                    />
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="form__box">
                    <label for="ico" class="form-label"> IČO </label>
                    <input name="ico" id="ico" type="text" placeholder="IČO" />
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="form__box">
                    <label for="dic" class="form-label"> DIČ </label>
                    <input id="dic" name="dic" type="text" placeholder="DIČ" />
                  </div>
                </div>
              </div>
            </div>
            <div class="form-check">
              <input type="checkbox" id="companyCheckboxAddress" />
              <label for="companyCheckboxAddress">
                <span> Odlišná doručovací adresa od fakturační</span>
              </label>
            </div>
            <div class="companyAddress-fields" style="display: none">
              <div class="row gx-5 gy-4">
                <div class="col-12">
                  <div class="row">
                    <div class="col-lg-5">
                      <label class="o-select">
                        <select class="js-select">
                          <option value="">Vyberte z uložených adres</option>
                          <option>Na Viničkách 508</option>
                          <option>Na Viničkách 508</option>
                          <option>Na Viničkách 508</option>
                          <option>Na Viničkách 508</option>
                        </select>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="col-lg-5">
                  <div class="form__box">
                    <label for="name" class="form-label"> Jméno </label>
                    <input
                      id="name"
                      name="name"
                      type="text"
                      placeholder="Jméno "
                    />
                  </div>
                </div>
                <div class="col-lg-5 col-sm-6">
                  <div class="form__box">
                    <label for="streetComp" class="form-label"> Ulice </label>
                    <input
                      name="streetComp"
                      id="streetComp"
                      type="text"
                      placeholder="Ulice"
                    />
                  </div>
                </div>
                <div class="col-lg-2 col-sm-6">
                  <div class="form__box">
                    <label for="refNumComp" class="form-label">
                      Číslo popisné
                    </label>
                    <input
                      name="refNumComp"
                      id="refNumComp"
                      type="text"
                      placeholder="Číslo popisné"
                    />
                  </div>
                </div>
                <div class="col-lg-5">
                  <div class="form__box">
                    <label for="surname" class="form-label"> Příjmení </label>
                    <input
                      id="surname"
                      name="surname"
                      type="text"
                      placeholder="Příjmení"
                    />
                  </div>
                </div>
                <div class="col-lg-5 col-sm-6">
                  <div class="form__box">
                    <label for="cityComp" class="form-label"> Město </label>
                    <input
                      name="cityComp"
                      id="cityComp"
                      type="text"
                      placeholder="Město"
                    />
                  </div>
                </div>
                <div class="col-lg-2 col-sm-6">
                  <div class="form__box">
                    <label for="pscComp" class="form-label"> PSČ </label>
                    <input
                      name="pscComp"
                      id="pscComp"
                      type="text"
                      placeholder="PSČ"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="shoppingInfo__bottom">
        <a href="#" class="link">
          {% include "@images/chevron-left.svg" %} Zpět k nákupu
        </a>
        <button class="btn">Shrnutí objednávky</button>
      </div>
    </div>
  </form>
</section>
